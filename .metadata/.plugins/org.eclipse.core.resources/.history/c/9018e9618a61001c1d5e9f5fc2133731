package aula04;

import java.util.Objects;

public class Caneta {

	public String modelo;
	private float ponta;
	
	public String getModelo() {
		return modelo;
	}
	public void setModelo(String modelo) {
		this.modelo = modelo;
	}
	public float getPonta() {
		return ponta;
	}
	public void setPonta(float ponta) {
		this.ponta = ponta;
	}
	@Override
	public int hashCode() {
		return Objects.hash(modelo, ponta);
	}
	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Caneta other = (Caneta) obj;
		return Objects.equals(modelo, other.modelo) && Float.floatToIntBits(ponta) == Float.floatToIntBits(other.ponta);
	}

}

