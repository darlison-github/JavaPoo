package aula04;

public class Caneta {

	public String modelo;
	private float ponta;
	private String azul;
	private boolean tampar;

	public Caneta(String modelo, float ponta, boolean tampar) {
		super();
		this.modelo = modelo;
		this.ponta = ponta;
		this.tampar = tampar;
	}

	public String getModelo() {
		return this.modelo;
	}

	public void setModelo(String m) {
		this.modelo = m;
	}

	public float getPonta() {
		return this.ponta;
	}

	public void setPonta(float p) {
		this.ponta = p;
	}

	public boolean isTampar() {
		return tampar;
	}

	public void setTampar(boolean t) {
		this.tampar = t;
	}

	public void status() {
		System.out.println("Sobre a caneta: ");
		System.out.println("Modelo " + this.getModelo());
		System.out.println("Ponta " + this.getPonta());
	}

	public String getAzul() {
		return azul;
	}

	public void setAzul(String azul) {
		this.azul = azul;
	}
}
